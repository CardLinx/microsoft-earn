@model CardLinkVM
<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <title>Complete Profile</title>
</head>
<body>
    <table width="443" cellpadding="20" cellspacing="0" style="margin-right: auto; margin-left: auto; margin-bottom: 0; margin-top: 0; width: 443px; font-family: 'Segoe UI Light', 'Segoe UI', Arial, Helvetica, sans-serif; padding-left: 20px; padding-bottom: 20px; padding-top: 20px; padding-right: 20px; border-left-width: 0; border-bottom-width: 0; border-right-width: 0; border-top-width: 0;">
        @Html.Partial("~/Views/CardLink/Partial/TransactionHeader.cshtml")
        <tr>
            <td align="left" valign="middle" style="font-size: 16px; color: #505050; font-family: 'Segoe UI Regular', 'Segoe UI', Arial, Helvetica, sans-serif; text-align: left; vertical-align: middle; padding-top: 0; padding-right: 11px; padding-bottom: 10px; padding-left: 11px;">
                <h2 style="color: #505050; font-weight: normal; font-size: 30px; font-family: 'Segoe UI Light', 'Segoe UI', Arial, Helvetica, sans-serif; margin: 0;">@CardLink.Hello&nbsp;@Model.UserName,</h2>
              <p>@CardLink.SignUpParagraph1</p>
                <p>@CardLink.HowWorks</p>
                <ol style="font-weight: bold; ">
                    <li style="margin: 0 0 0 10px;">
                        <span style="font-weight: normal;">@Html.Raw(string.Format(CardLink.HowToSave_1, string.Format("<a target='blank' href='https://www.bing.com/offers?bor={0}&bof={1}'>bing.com/offers</a>", ViewBag.referrer, ViewBag.campaign)))</span>
                    </li>
                    <li style="margin: 0 0 0 10px;">
                        <span style="font-weight: normal">@CardLink.HowToSave_2</span>
                    </li>
                    <li style="margin: 0 0 0 10px;">
                        <span style="font-weight: normal">@CardLink.HowToSave_3</span>
                    </li>
                </ol>
                <p>@CardLink.SignUpBottom</p>
                <p>
                    @Html.Raw(string.Format(CardLink.CompleteProfile_Next, string.Format("https://www.bing.com/offers/Settings/CardLinked?bor={0}&bof={1}", ViewBag.referrer, ViewBag.campaign)))
                </p>
            </td>
        </tr>

        @Html.Partial("~/Views/CardLink/Partial/MoreAndFinePrint.cshtml", string.Empty)
        @Html.Partial("~/Views/CardLink/Partial/TransactionFooter.cshtml")
    </table>
</body>
</html>